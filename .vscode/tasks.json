  "version": "2.0.0",
  "tasks": [
    // A quick start at build specifying, which much room for improvement.
    {
      "label": "Build",
      "type": "shell",
      "command": "make debug_build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$msCompile"
      ]
    },
    {
      "label": "Initial build",
      "type": "shell",
      "command": "make debug",
      "group": "build",
      "problemMatcher": [
        "$msCompile"
      ]
    },
  ]
}